<h2>All Products</h2>
<% if @products.any? %>
<h2>Recent Products</h2>
<% @products.each do |product| %>
<p><%= link_to product.name, product_path(product)%></p>
<% end %>
<% else %>
<p>There are no products to display</p>
<% end %>
<p><%= link_to "Add a product", new_product_path%></p>
<p><%= link_to "Home", root_path%></p>
