<h2>Edit <%= @product.name %></h2>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cost %>
  <%= f.number_field :cost %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.submit  %>
<% end %>


<p><%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></p>
