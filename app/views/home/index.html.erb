<div class="grid-container">
<div class="button-background">

  <h4 id="all-button"> <%= link_to "All Products", products_path %></h4>
</div>

<div class="left-pipe">

<% if @products.any? %>
<div class="pipe-contents-left">

<h2 class="pipe-title">Recent Products</h2>
<% @products.each do |product| %>
<p><%= link_to product.name, product_path(product)%></p>
<% end %>
<% else %>
<p>There are no products to display</p>
<% end %>
</div>
</div>

<div class="middle-pipe">
<% if @usa_products.any? %>
<div class="pipe-contents-middle">

<h2 class="pipe-title">Local Products</h2>
<% @usa_products.each do |product| %>
<p><%= link_to product.name, product_path(product)%></p>
<% end %>
<% else %>
<p>There are no products to display</p>
<% end %>
</div>
</div>


<div class="right-pipe">
<% if @popular.any? %>
<div class="pipe-contents-right">
<h2 class="pipe-title">Most Popular</h2>

<% @popular.each do |product| %>
<p><%= link_to product.name, product_path(product)%></p>
<% end %>
<% else %>
<p>There are no products to display</p>
<% end %>
</div>
</div>

</div>
